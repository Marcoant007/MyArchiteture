{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDirs": [
      "./__tests__",
      "./src"
    ],
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@config/*": [
        "src/shared/infra/config/*"
      ],
      "@database/*": [
        "src/shared/typeorm/*"
      ],
      "@dto/*": [
        "./src/dto/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@routes/*": [
        "src/shared/infra/http/routes/*"
      ],
      "@repositories/*": [
        "./src/repositories/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@util/*": [
        "./src/util/*"
      ],
      "@app": [
        "./src/app"
      ]
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ]
}